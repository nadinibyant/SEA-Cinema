    <link href="/css/style.css" rel="stylesheet">

    <style>
        img {
            opacity: 0.3;
            width: 100%;
        }

        main {
            background-color: #FFDDF8;
        }

        .btn-signin {
            background-color: #AE7FA4;
            color: white;
        }
